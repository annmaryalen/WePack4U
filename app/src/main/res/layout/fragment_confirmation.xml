<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        tools:context=".activities.ConfirmationActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successful_header"
            android:textSize="@dimen/_24ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timestamp"
            android:textSize="@dimen/_10ssp"
            android:gravity="end"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cart_recycler_b"/>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/_185sdp"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textSize="@dimen/_12ssp"
                android:textColor="#D5000000"
                android:gravity="end"
                android:fontFamily="@font/montserrat_bold"/>
            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:id="@+id/total2"
                android:textSize="@dimen/_15ssp"
                android:gravity="end"
                android:fontFamily="@font/montserrat_medium"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payment_text"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waiting_time"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:text="@string/checkout_header"
            android:id="@+id/done_button"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>
    </LinearLayout>
</ScrollView>