<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_10sdp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stall_name"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/montserrat_medium"/>
                <TextView
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_num"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_medium"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/name_column_header"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#BC000000"/>

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_column_header"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#BC000000"/>
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/price_column_header"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#BC000000"/>
            </TableRow>

            <!-- draw horizontal line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray_line"/>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TableLayout
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_a">
                </TableLayout>
                <TableLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_b">
                </TableLayout>
                <TableLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_c">
                </TableLayout>
            </TableRow>

            <!-- draw horizontal line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray_line"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>