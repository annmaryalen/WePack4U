<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StorePageFragment"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/sutd_canteen_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/sutd_canteen_store"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <View
        android:id="@+id/Separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sutd_canteen_heading"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray" />

    <!--start recyclerview from here-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewstorefragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_below="@id/sutd_canteen_heading"
        android:layout_marginTop="@dimen/_15ssp"/>

</RelativeLayout>